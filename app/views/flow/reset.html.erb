  .box{
    background-color: light-blue;
    width: 25%;
    margin: auto;
    border: 3px solid #eaeced;
    border-radius: 10px;
    margin-top:150px;
    padding: 10px;  
  }

    
  .container1{
    margin:auto;
    text-align: center;
  }
  
  .submit{
      margin-left :35%;
  }
